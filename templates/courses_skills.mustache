{{!
    @template local_apsolu/courses_skills

    Template Moodle pour afficher la liste des niveaux de pratique.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * notification
    * count_skills
    * skills
        * id
        * name
        * shortname

    Example context (json):
    {
        "wwwroot": "",
        "notification": "",
        "count_skills": 0,
        "skills": []
    }
}}
<h1>{{#str}}skills_list, local_apsolu{{/str}}</h1>

{{#notification}}
	{{{notification}}}
{{/notification}}

<ul class="list-inline text-right">
	<li class="list-inline-item"><a class="btn btn-default" href="{{wwwroot}}/local/apsolu/courses/index.php?tab=skills&action=export">{{#str}}skills_csv_export, local_apsolu{{/str}}</a></li>
	<li class="list-inline-item"><a class="btn btn-primary" href="{{wwwroot}}/local/apsolu/courses/index.php?tab=skills&action=edit">{{#str}}skill_add, local_apsolu{{/str}}</a></li>
</ul>

{{^count_skills}}
<p class="alert alert-info">{{#str}}no_skill, local_apsolu{{/str}}</p>
{{/count_skills}}

{{#count_skills}}
<table class="table table-striped table-sortable">
<thead>
	<tr>
		<th>{{#str}}skill_shortnames, local_apsolu{{/str}}</th>
		<th>{{#str}}skill_fullnames, local_apsolu{{/str}}</th>
		<th>{{#str}}actions{{/str}}</th>
	</tr>
</thead>
<tbody>
	{{#skills}}
	<tr>
		<td>{{name}}</td>
		<td>{{shortname}}</td>
		<td>
			<ul class="list-inline">
				<li class="list-inline-item"><a href="{{wwwroot}}/local/apsolu/courses/index.php?tab=skills&action=edit&skillid={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></li>
				<li class="list-inline-item"><a href="{{wwwroot}}/local/apsolu/courses/index.php?tab=skills&action=delete&skillid={{id}}">{{#pix}}t/delete,core,{{#str}}delete{{/str}}{{/pix}}</a></li>
			</ul>
		</td>
	</tr>
	{{/skills}}
</tbody>
</table>

{{/count_skills}}
