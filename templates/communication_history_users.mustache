{{!
    @template local_apsolu/communication_history_users

    Template Moodle pour afficher les utilisateurs notifi√©s

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * count_receivers
    * receivers
        * id
        * firstname
        * lastname
        * idnumber
        * email

    Example context (json):
    {
        "wwwroot": "",
        "count_receivers": 0,
        "receivers": []
    }
}}
{{^count_receivers}}
    <p class="alert alert-info">{{#str}}no_users, local_apsolu{{/str}}</p>
{{/count_receivers}}

{{#count_receivers}}
<table class="table table-striped">
    <tr>
        <th>{{#str}}lastname{{/str}}</th>
        <th>{{#str}}firstname{{/str}}</th>
        <th>{{#str}}idnumber{{/str}}</th>
        <th>{{#str}}email{{/str}}</th>
    </tr>
    {{#receivers}}
    <tr>
        <td>{{ lastname }}</td>
        <td>{{ firstname }}</td>
        <td>{{ idnumber }}</td>
        <td>{{ email }}</td>
    </tr>
    {{/receivers}}
</table>
{{/count_receivers}}
