{{^can_edit}}
    <div class="alert alert-info">{{#contacts}}{{{.}}} {{/contacts}}</div>
{{/can_edit}}

{{#count_cards}}
    {{#due}}
    <div class="alert alert-warning">{{#str}}you_must_pay_for_your_membership_in_the_sports_association, local_apsolu{{/str}}</div>
    <div class="alert alert-danger">{{#str}}important_once_you_have_paid_your_membership_fee_you_must_return_to_this_form_and_confirm, local_apsolu{{/str}}</div>
    {{/due}}

    {{^due}}
    <div class="alert alert-success">{{#str}}you_have_paid_for_your_membership_in_the_sports_association, local_apsolu{{/str}}</div>
    {{/due}}

    <ul class="list-unstyled">
    {{#cards}}
        <li>{{{image}}} {{name}}</li>
    {{/cards}}
    </ul>

    {{#can_edit}}
    {{#due}}
    <p><a class="btn btn-success" href="{{ payment_url }}">{{#str}}pay_for_license, local_apsolu{{/str}}</a><p>
    {{/due}}

    {{^due}}
    <p><a class="btn btn-primary" href="{{wwwroot}}/local/apsolu/federation/adhesion/index.php?step={{nextstep}}">{{#str}}next, local_apsolu{{/str}}</a></p>
    {{/due}}
    {{/can_edit}}
{{/count_cards}}

