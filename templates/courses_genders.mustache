{{!
    @template local_apsolu/courses_genders

    Template Moodle pour afficher la liste des genres.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * notification
    * count_genders
    * genders
        * id
        * name

    Example context (json):
    {
        "wwwroot": "",
        "notification": "",
        "count_genders": 0,
        "genders": []
    }
}}
<h1>{{#str}}genders_list, local_apsolu{{/str}}</h1>

<p class="text-right">
	<a class="btn btn-primary" href="{{wwwroot}}/local/apsolu/courses/index.php?tab=genders&action=edit">{{#str}}gender_add, local_apsolu{{/str}}</a>
</p>

{{^genders}}
<p class="alert alert-info">{{#str}}no_gender, local_apsolu{{/str}}</p>
{{/genders}}
{{#count_genders}}
<table class="table table-striped table-sortable">
<thead>
	<tr>
		<th>{{#str}}genders, local_apsolu{{/str}}</th>
		<th>{{#str}}actions{{/str}}</th>
	</tr>
</thead>
<tbody>
	{{#genders}}
	<tr>
		<td>{{name}}</td>
		<td><a href="{{wwwroot}}/local/apsolu/courses/index.php?tab=genders&action=edit&genderid={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></td>
	</tr>
	{{/genders}}
</tbody>
</table>
{{/count_genders}}
