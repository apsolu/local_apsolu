{{!
    @template local_apsolu/payment_centers

    Template Moodle pour afficher la liste des centres de paiement.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * notification
    * count_centers
    * centers

    Example context (json):
    {
        "notification": "",
        "count_centers": 0,
        "centers": []
    }
}}
<h1>{{#str}}payment_centers, local_apsolu{{/str}}</h1>

{{#notification}}
	{{{notification}}}
{{/notification}}

<p class="text-end">
	<a class="btn btn-primary" href="{{wwwroot}}/local/apsolu/payment/admin.php?tab=centers&action=edit">{{#str}}center_add, local_apsolu{{/str}}</a>
</p>

{{^count_centers}}
<p class="alert alert-info">{{#str}}no_center, local_apsolu{{/str}}</p>
{{/count_centers}}

{{#count_centers}}
<table class="table table-striped">
<thead>
	<tr>
		<th>{{#str}}payment_centers, local_apsolu{{/str}}</th>
		<th>{{#str}}payment_prefix, local_apsolu{{/str}}</th>
		<th>{{#str}}paybox_idnumber, local_apsolu{{/str}}</th>
		<th>{{#str}}paybox_sitenumber, local_apsolu{{/str}}</th>
		<th>{{#str}}paybox_rank, local_apsolu{{/str}}</th>
		<th>{{#str}}paybox_hmac, local_apsolu{{/str}}</th>
		<th>{{#str}}actions{{/str}}</th>
	</tr>
</thead>
<tbody>
	{{#centers}}
	<tr>
		<td>{{name}}</td>
		<td>{{#prefix}}{{prefix}}{{/prefix}}{{^prefix}}<em>{{#str}}none{{/str}}</em>{{/prefix}}</td>
		<td>{{idnumber}}</td>
		<td>{{sitenumber}}</td>
		<td>{{rank}}</td>
		<td>{{hmac}}</td>
		<td><a href="{{wwwroot}}/local/apsolu/payment/admin.php?tab=centers&action=edit&centerid={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></td>
	</tr>
	{{/centers}}
</tbody>
</table>
{{/count_centers}}
