{{!
    @template local_apsolu/communication_history

    Template Moodle pour afficher l'historique des messages envoy√©s

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * count_messages
    * messages
        * id
        * date
        * userid
        * firstname
        * lastname
        * subject
        * countmessages

    Example context (json):
    {
        "wwwroot": "",
        "count_messages": 0,
        "messages": []
    }
}}
{{^count_messages}}
    <p class="alert alert-info">{{#str}}no_histories, local_apsolu{{/str}}</p>
{{/count_messages}}

{{#count_messages}}
<table class="table table-striped">
    <tr>
        <th>{{#str}}date{{/str}}</th>
        <th>{{#str}}author, local_apsolu{{/str}}</th>
        <th>{{#str}}subject{{/str}}</th>
        <th>{{#str}}number_of_notifications, local_apsolu{{/str}}</th>
        <th>{{#str}}actions{{/str}}</th>
    </tr>
    {{#messages}}
    <tr>
        <td>{{ date }}</td>
        <td>{{#userid}}<a href="{{wwwroot}}/user/profile.php?id={{userid}}">{{firstname}} {{lastname}}</a>{{/userid}}</td>
        <td>{{ subject }}</td>
        <td>{{ countmessages }}</td>
        <td>
            <ul class="list-inline">
                {{#template}}
                <li class="list-inline-item mr-3">
                    <a href="{{wwwroot}}/local/apsolu/communication/index.php?page=history&action=showcontent&templateid={{template}}&timestamp={{timestamp}}"><i class="icon fa fa-file-text-o fa-fw" aria-hidden="true"></i>{{#str}}see_the_message, local_apsolu{{/str}}</a>
                </li>
                {{/template}}
                <li class="list-inline-item ms-3">
                    <a href="{{wwwroot}}/local/apsolu/communication/index.php?page=history&action=showusers&id={{id}}"><i class="icon fa fa-users fa-fw" aria-hidden="true"></i>{{#str}}notified_users, local_apsolu{{/str}}</a>
                </li>
            </ul>
        </td>
    </tr>
    {{/messages}}
</table>
{{/count_messages}}
