{{!
    @template local_apsolu/configuration_roles

    Template Moodle pour afficher les roles.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * notification
    * count_roles
    * roles
        * id
        * color
        * fontawesomeid

    Example context (json):
    {
        "wwwroot": "",
        "notification": "",
        "count_roles": 0,
        "roles": []
    }
}}
{{#notification}}
	{{{notification}}}
{{/notification}}

{{^count_roles}}
<p class="alert alert-info">{{#str}}no_roles, local_apsolu{{/str}}</p>
{{/count_roles}}

{{#count_roles}}
<table class="table table-striped">
<thead>
	<tr>
		<th>{{#str}}icon{{/str}}</th>
		<th>{{#str}}role{{/str}}</th>
		<th>{{#str}}actions{{/str}}</th>
	</tr>
</thead>
<tbody>
	{{#roles}}
	<tr>
		<td><i aria-hidden="true" class="fa fa-{{fontawesomeid}}{{^fontawesomeid}}check{{/fontawesomeid}}" style="color: {{color}}{{^color}}gray{{/color}};"></i></td>
		<td>{{name}}</td>
		<td><a href="{{wwwroot}}/local/apsolu/configuration/index.php?page=roles&action=edit&roleid={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></td>
	</tr>
	{{/roles}}
</tbody>
</table>
{{/count_roles}}
