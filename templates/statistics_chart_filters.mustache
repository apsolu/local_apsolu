{{!
    @template local_apsolu/statistics_chart_filters

    Template Moodle.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * uniqid
    * options

    Example context (json):
    {
        "uniqid": "",
        "options": "''"
    }
}}
<div id="chart-filters-{{ uniqid }}"></div>

{{#js}}

require([
  'jquery',
  'local_apsolu/statistics_chart_filters',
], function($) {

  $(document).ready(function() {
    var options = {{{options}}};
    $('#chart-filters-{{{uniqid}}}').renderCriterias('{{{uniqid}}}', options);
  });

});

{{/js}}
