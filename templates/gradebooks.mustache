{{!
    @template local_apsolu/grade_items

    Template Moodle pour afficher la liste des éléments d'évaluation.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * notification
    * count_gradeitems
    * gradeitems
        * id
        * name
        * role
        * calendar

    Example context (json):
    {
        "wwwroot": "",
        "notification": "",
        "count_gradeitems": 0,
        "gradeitems": []
    }
}}
<h1>{{#str}}gradeitems_list, local_apsolu{{/str}}</h1>

{{#notification}}
	{{{notification}}}
{{/notification}}

<p class="text-right">
	<a class="btn btn-primary" href="{{wwwroot}}/local/apsolu/grades/admin/index.php?tab=gradeitems&action=edit">{{#str}}gradeitem_add, local_apsolu{{/str}}</a>
</p>

{{^count_gradeitems}}
<p class="alert alert-info">{{#str}}no_gradeitems, local_apsolu{{/str}}</p>
{{/count_gradeitems}}

{{#count_gradeitems}}
<table class="table table-striped table-sortable">
<thead>
	<tr>
		<th>{{#str}}gradeitem_name, local_apsolu{{/str}}</th>
		<th>{{#str}}role{{/str}}</th>
		<th>{{#str}}calendar, local_apsolu{{/str}}</th>
		<th>{{#str}}actions{{/str}}</th>
	</tr>
</thead>
<tbody>
	{{#gradeitems}}
	<tr>
		<td>{{name}}</td>
		<td>{{role}}</td>
		<td>{{calendar}}</td>
		<td>
			<ul class="list-inline">
				<li class="list-inline-item"><a href="{{wwwroot}}/local/apsolu/grades/admin/index.php?tab=gradeitems&action=edit&gradeitemid={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></li>
				<li class="list-inline-item"><a href="{{wwwroot}}/local/apsolu/grades/admin/index.php?tab=gradeitems&action=delete&gradeitemid={{id}}">{{#pix}}t/delete,core,{{#str}}delete{{/str}}{{/pix}}</a></li>
			</ul>
		</td>
	</tr>
	{{/gradeitems}}
</tbody>
</table>
{{/count_gradeitems}}
