{{!
    @template local_apsolu/federation_listing

    Template Moodle pour afficher le formulaire d'extraction FFSU.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * count_users
    * users
      * id
      * htmlpicture
      * lastname
      * firstname
      * idnumber
      * institution
      * department
      * customfields
        * apsolucardpaid
        * apsolucycle
        * apsolusex
        * apsoluufr
      * course
      * enrol
      * rolename
      * list

    Example context (json):
    {
        "wwwroot": "https://apsolu.fr",
        "count_users": 0,
        "users": []
    }
}}
{{^users}}
<p class="alert alert-info">{{#str}}no_students, local_apsolu{{/str}}</p>
{{/users}}

{{#count_users}}
<p class="alert alert-info">{{#str}}students_found, local_apsolu, {{ count_users }}{{/str}}</p>

<p>{{#str}}select{{/str}} <button type="button" class="btn btn-link checkall">{{#str}}any{{/str}}</button> / <button type="button" class="btn btn-link uncheckall">{{#str}}none{{/str}}</button></p>

<form action="{{action}}" method="post">
	<table class="table table-striped table-sortable">
	<thead>
		<tr>
			<th>{{#str}}action{{/str}}</th>
			<th>{{#str}}pictureofuser{{/str}}</th>
			<th>{{#str}}lastname{{/str}}</th>
			<th>{{#str}}firstname{{/str}}</th>
			<th>{{#str}}federation_number, local_apsolu{{/str}}</th>
			<th>{{#str}}main_sport, local_apsolu{{/str}}</th>
			<th>{{#str}}idnumber{{/str}}</th>
			<th>{{#str}}sex, local_apsolu{{/str}}</th>
			<th>{{#str}}institution{{/str}}</th>
			<th>{{#str}}department{{/str}}</th>
			<th>{{#str}}fields_apsoluufr, local_apsolu{{/str}}</th>
			<th>{{#str}}fields_apsolucycle, local_apsolu{{/str}}</th>
		</tr>
	</thead>
	<tbody>
		{{#users}}
		<tr>
			<td><input type="checkbox" class="apsolu-select-manage-users-input-checkbox" name="users[]" value="{{id}}" /></td>
			<td>{{{htmlpicture}}}</td>
			<td>{{lastname}}</td>
			<td>{{firstname}}</td>
			<td>{{federationnumber}}</td>
			<td>{{mainsport}}</td>
			<td>{{idnumber}}</td>
			<td>{{sex}}</td>
			<td>{{institution}}</td>
			<td>{{department}}</td>
			<td>{{ufr}}</td>
			<td>{{cycle}}</td>
		</tr>
		{{/users}}
	</tbody>
	</table>

	<p>{{#str}}select{{/str}} <button type="button" class="btn btn-link checkall">{{#str}}any{{/str}}</button> / <button type="button" class="btn btn-link uncheckall">{{#str}}none{{/str}}</button></p>
	<p><input type="submit" class="btn btn-primary" name="notify" value="{{#str}}notify, local_apsolu{{/str}}" /></p>
</form>
{{/count_users}}
