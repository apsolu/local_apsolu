{{!
    @template local_apsolu/courses_locations

    Template Moodle pour afficher la liste des lieux de pratique.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * notification
    * count_locations
    * locations
        * id
        * name
        * address
        * email
        * phone
        * longitude
        * latitude
        * area
        * manager

    Example context (json):
    {
        "wwwroot": "",
        "notification": "",
        "count_locations": 0,
        "locations": []
    }
}}
<h1>{{#str}}locations_list, local_apsolu{{/str}}</h1>

{{#notification}}
	{{{notification}}}
{{/notification}}

<p class="text-right">
	<a class="btn btn-primary" href="{{wwwroot}}/local/apsolu/courses/index.php?tab=locations&action=edit">{{#str}}location_add, local_apsolu{{/str}}</a>
</p>

{{^count_locations}}
<p class="alert alert-info">{{#str}}no_location, local_apsolu{{/str}}</p>
{{/count_locations}}

{{#count_locations}}
<table class="table table-striped table-sortable">
<thead>
	<tr>
		<th>{{#str}}locations, local_apsolu{{/str}}</th>
		<th>{{#str}}addresses, local_apsolu{{/str}}</th>
		<th>{{#str}}emails, local_apsolu{{/str}}</th>
		<th>{{#str}}phones, local_apsolu{{/str}}</th>
		<th>{{#str}}longitudes, local_apsolu{{/str}}</th>
		<th>{{#str}}latitudes, local_apsolu{{/str}}</th>
		<th>{{#str}}areas, local_apsolu{{/str}}</th>
		<th>{{#str}}managers, local_apsolu{{/str}}</th>
		<th>{{#str}}actions{{/str}}</th>
	</tr>
</thead>
<tbody>
	{{#locations}}
	<tr>
		<td>{{name}}</td>
		<td>{{address}}</td>
		<td>{{email}}</td>
		<td>{{phone}}</td>
		<td>{{longitude}}</td>
		<td>{{latitude}}</td>
		<td>{{area}}</td>
		<td>{{manager}}</td>
		<td>
			<ul class="list-inline">
				<li class="list-inline-item"><a href="{{wwwroot}}/local/apsolu/courses/index.php?tab=locations&action=edit&locationid={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></li>
				<li class="list-inline-item"><a href="{{wwwroot}}/local/apsolu/courses/index.php?tab=locations&action=delete&locationid={{id}}">{{#pix}}t/delete,core,{{#str}}delete{{/str}}{{/pix}}</a></li>
			</ul>
		</td>
	</tr>
	{{/locations}}
</tbody>
</table>
{{/count_locations}}
